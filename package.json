{
  "name": "cerbos-setup-action",
  "version": "0.0.1",
  "private": true,
  "description": "Cerbos Setup Action",
  "exports": "./lib/main.js",
  "type": "module",
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "engines": {
    "node": "22.20.0",
    "pnpm": "10.17.1"
  },
  "scripts": {
    "all:parallel": "concurrently --group --prefix=none",
    "build": "rm -rf dist && ncc build -o dist src/main.ts",
    "eslint:run": "NODE_OPTIONS=--max-old-space-size=3072 eslint --max-warnings=0",
    "lint": "pnpm run all:parallel 'pnpm:lint:check:*'",
    "lint:check:eslint": "pnpm run eslint:run src tests",
    "lint:check:prettier": "prettier --check src tests",
    "lint:fix": "pnpm run lint:fix:eslint && pnpm run lint:fix:prettier",
    "lint:fix:eslint": "pnpm run eslint:run --fix src tests",
    "lint:fix:prettier": "prettier --write src tests",
    "test": "glob -c \"node --import tsx --no-warnings --test\" \"./tests/**/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerbos/cerbos-setup-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Cerbos",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/tool-cache": "^2.0.2",
    "https-proxy-agent": "^7.0.6",
    "octokit": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "22.18.6",
    "@vercel/ncc": "^0.38.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
