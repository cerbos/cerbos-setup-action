{
  "name": "cerbos-setup-action",
  "private": true,
  "description": "A GitHub action to setup Cerbos and Cerbosctl binaries",
  "type": "module",
  "packageManager": "pnpm@10.30.2+sha512.36cdc707e7b7940a988c9c1ecf88d084f8514b5c3f085f53a2e244c2921d3b2545bc20dd4ebe1fc245feec463bb298aecea7a63ed1f7680b877dc6379d8d0cb4",
  "engines": {
    "node": "24.14.0",
    "pnpm": "10.30.2"
  },
  "scripts": {
    "all:parallel": "concurrently --group --prefix=none",
    "build": "rm -rf dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "eslint:run": "NODE_OPTIONS=--max-old-space-size=3072 eslint --max-warnings=0",
    "lint": "pnpm run all:parallel 'pnpm:lint:check:*'",
    "lint:check:eslint": "pnpm run eslint:run src tests",
    "lint:check:prettier": "prettier --check src tests",
    "lint:fix": "pnpm run lint:fix:eslint && pnpm run lint:fix:prettier",
    "lint:fix:eslint": "pnpm run eslint:run --fix src tests",
    "lint:fix:prettier": "prettier --write src tests",
    "test": "glob-bin -c \"node --import tsx --no-warnings --test\" \"./tests/**/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerbos/cerbos-setup-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Cerbos",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "3.0.0",
    "cerbos-actions-common": "github:cerbos/cerbos-actions-common#0.0.25",
    "https-proxy-agent": "7.0.6",
    "octokit": "5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "9.39.3",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/node": "24.10.13",
    "concurrently": "9.2.1",
    "eslint": "9.39.3",
    "glob-bin": "1.1.0",
    "globals": "17.3.0",
    "prettier": "3.8.1",
    "rollup": "4.59.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.1"
  }
}
