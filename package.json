{
  "name": "cerbos-setup-action",
  "version": "0.0.1",
  "private": true,
  "description": "Cerbos Setup Action",
  "exports": "./lib/main.js",
  "packageManager": "pnpm@9.12.1",
  "type": "module",
  "engines": {
    "node": "20.18.0",
    "pnpm": "9.12.1"
  },
  "scripts": {
    "build": "ncc build -o dist src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "glob -c \"node --import tsx --no-warnings --test\" \"./tests/**/*.test.ts\"",
    "all": "pnpm run format && pnpm run lint && pnpm run build && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerbos/cerbos-setup-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Cerbos",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/tool-cache": "^2.0.1",
    "octokit": "^4.0.3",
    "https-proxy-agent": "^7.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/eslint__js": "^8.42.3",
    "@types/glob": "^8.1.0",
    "@types/node": "22.10.3",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.19.0",
    "glob": "^11.0.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.23.0"
  }
}
