{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:disable",
    "group:allNonMajor",
    ":separateMultipleMajorReleases",
    ":gitSignOff",
    "schedule:earlyMondays"
  ],
  "automerge": false,
  "automergeSchedule": [
    "after 9am and before 5pm every weekday"
  ],
  "major": {
    "automerge": false
  },
  "dependencyDashboard": true,
  "baseBranches": [
    "main"
  ]
}
